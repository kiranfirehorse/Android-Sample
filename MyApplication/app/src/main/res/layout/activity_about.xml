<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.neeraj.myapplication.About">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:text="QBurst was founded by Prathapan Sethu, Binu Dasappan, and Ansar Shahabudeen in 2004. Since 2005, their professional strength has grown in scale from 25 to 1000+ employees. Over the past decade, the company established offices in the UK, India, Poland, Australia, the UAE, and Singapore."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:autoText="false"
        android:editable="false" />
</RelativeLayout>
